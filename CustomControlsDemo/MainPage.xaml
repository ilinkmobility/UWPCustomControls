<Page
    x:Class="CustomControlsDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CustomControlsDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="30"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <control:RichPasswordBox IsValidPassword="{Binding ValidPassword, Mode=TwoWay}" Password="{Binding Password, Mode=TwoWay}" />
        <TextBlock Text="{Binding ValidPassword, Mode=TwoWay}" />
    </StackPanel>
</Page>
